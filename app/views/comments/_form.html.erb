<%= form_with(model: @comment, local: true) do |f| %>
    <% if @comment.errors.any? %>
        <div id = 'error_explanation'>
            <h2>Este comentario no se pudo crear por las siguientes razones</h2>
            <ul>
                <% @comment.errors.full_messages.each do |msg|%>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row d-flex justify-content-center text-center">
        <div class="col-12">
            <%= f.hidden_field :publication_id, value: @publication.id %>
            <%= f.label :content, "Publica un comentario", class: "fs-3 fw-bold me-4" %>
            <%= f.text_area :content, size: "120x3", class: "form-control mt-3" %>
        </div>
        <div class="col-12"><%= f.submit "Comentar", class: "btn mybtn px-4 py-2 mt-3" %></div>
    </div>

    
<% end %>